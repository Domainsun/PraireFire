<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/grey_background"
    tools:context="com.praire.fire.my.setActivitys.RealVerifyActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@mipmap/background_business_head">

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/back" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="绑定银行卡"
            android:textColor="@android:color/white"
            android:textSize="20sp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">


        <TextView
            android:id="@+id/tv_id_num"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="银行户名:"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_name"
            android:inputType="text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="张三（不可修改）"
            android:textSize="14sp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_id_num"
            android:maxLength="15"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_bank_card_num"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="银行卡号:"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            />


        <EditText
            android:id="@+id/et_bank_card_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="请输入卡号"
            android:textSize="14sp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv"
            android:maxLength="19"
            />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_creat_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="0.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="开户行:"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_choose_creat_account"
            android:layout_marginRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="选择开户行"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:drawableRight="@mipmap/tail"
            android:drawablePadding="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_adder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_marginTop="0.5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="开户行所在地:"
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_choose_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="选择地区"
            android:textColor="@color/grey"
            android:textSize="14sp"
            android:drawableRight="@mipmap/tail"
            android:drawablePadding="10dp"/>
    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_creat_sub_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_pay_password"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="开户支行:"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            />


        <EditText
            android:id="@+id/et_sub_account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="请输入支行名称"
            android:textSize="14sp"
            android:background="@null"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_pay_password"
            android:maxLength="18"
            />
    </RelativeLayout>



    <LinearLayout
        android:id="@+id/rl_submit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="25dp"
            android:background="@color/white"
            >
            <Button
                android:id="@+id/submit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="345dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/orange"
                android:gravity="center"
                android:text="绑定"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </RelativeLayout>
    </LinearLayout>




</LinearLayout>
