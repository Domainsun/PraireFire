<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:background="@color/grey_background">


    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常见问题"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:layout_marginLeft="15dp"/>

    <RelativeLayout
        android:id="@+id/rl_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="会员享有哪些商家服务?"
            android:textColor="@color/text_color"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="9dp"
            android:drawableRight="@mipmap/tail"
            android:gravity="center"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="怎么成为商家?"
            android:textColor="@color/text_color"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="9dp"
            android:drawableRight="@mipmap/tail"
            android:gravity="center"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="燎原会员洗车可以享受哪些特权?"
            android:textColor="@color/text_color"
            android:textSize="16sp"

            />

        <TextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="9dp"
            android:drawableRight="@mipmap/tail"
            android:gravity="center"
            android:text=""
            android:textColor="@color/grey"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        >
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            >
            <Button
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/btn_phone_customer"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_btn_resgister"
                android:drawableLeft="@mipmap/phone2"
                android:text="电话客服"
                android:paddingLeft="15dp"
                android:textColor="@color/white"
                android:textSize="19sp" />

            <Button
                android:paddingLeft="15dp"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/btn_online_customer"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_btn_customer_2"
                android:drawableLeft="@mipmap/online"

                android:text="在线客服"
                android:textColor="@color/white"
                android:textSize="19sp" />
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>
