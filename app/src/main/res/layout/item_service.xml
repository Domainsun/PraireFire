<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="洗车"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginLeft="@dimen/x30"
            android:textColor="@color/product_text"/>

        <TextView
            android:width="@dimen/y500"
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="洗车的撒范德萨范德萨范德萨第三方第三方萨范德萨范德萨第三方第三方萨范德萨范德萨第三方第三方萨范德萨范德萨第三方第三方萨范德萨范德萨第三方第三方"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y18"
            android:textColor="@color/grey"
            android:ellipsize="end"
            android:singleLine="true"/>


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_introduce"
            android:layout_below="@+id/tv_introduce"
            android:paddingTop="@dimen/y30"
            android:text="¥ 25"
            android:textColor="@color/f9e19"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/saled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_price"
            android:layout_below="@id/tv_introduce"
            android:text="已售200"
            android:layout_marginTop="@dimen/y45"
            android:layout_marginLeft="@dimen/x100"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        


        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/service_off_shelves"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_f5d"
            android:layout_alignParentRight="true"
            android:text="修改"
            android:textColor="@color/f5d"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginRight="@dimen/x30"/>


        <TextView
            android:layout_marginBottom="@dimen/y25"
            android:id="@+id/tv_delete"
            android:layout_below="@id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_f5d"
            android:layout_alignParentRight="true"
            android:text="下架"
            android:textColor="@color/f5d"
            android:layout_marginTop="@dimen/y30"
            android:layout_marginRight="@dimen/x30"/>
        

    </RelativeLayout>


</LinearLayout>
