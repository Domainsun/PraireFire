<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="洗车"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/product_text"/>

        <TextView
            android:width="250dp"
            android:id="@+id/tv_introduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="洗车的撒范德萨范德萨范德萨第三方第三方萨范德萨范德萨第三方第三方萨范德萨范德萨第三方第三方萨范德萨范德萨第三方第三方萨范德萨范德萨第三方第三方"
            android:layout_below="@id/tv_name"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:textColor="@color/grey"
            android:ellipsize="end"
            android:singleLine="true"/>


        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_introduce"
            android:layout_below="@+id/tv_introduce"
            android:paddingTop="15dp"
            android:text="¥ 25"
            android:layout_marginBottom="8dp"
            android:textColor="@color/f9e19"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/saled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_price"
            android:layout_below="@id/tv_introduce"
            android:text="已售200"
            android:layout_marginTop="22.5dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        



        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_f5d"
            android:layout_alignParentRight="true"
            android:text="修改"
            android:textColor="@color/f5d"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>


        <TextView
            android:layout_marginBottom="12.5dp"
            android:id="@+id/tv_delete"
            android:layout_below="@id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_f5d"
            android:layout_alignParentRight="true"
            android:text="下架"
            android:textColor="@color/f5d"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/service_off_shelves"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
    </RelativeLayout>


</LinearLayout>
