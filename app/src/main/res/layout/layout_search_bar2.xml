<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@mipmap/head_backgroud"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/search_bar2_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:src="@mipmap/back"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/search_bar2_relativeLayout"
        android:layout_width="240dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:background="@drawable/shape_plug_search_edittext"
        >

        <EditText
            android:id="@+id/plug_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:drawableLeft="@mipmap/search_icon"
            android:drawablePadding="5dp"
            android:editable="false"
            android:focusable="false"
            android:gravity="left|center_vertical"
            android:hint="搜索产品、服务"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>


</RelativeLayout>
