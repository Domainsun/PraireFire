<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingTop="15dp"
    android:paddingBottom="15dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/item_car_list_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="15dp"
        fresco:placeholderImage="@mipmap/ic_launcher" />


    <LinearLayout
        android:id="@+id/item_car_list_ll"
        android:layout_toRightOf="@id/item_car_list_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_car_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/text_color"
            android:textSize="19sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/item_car_list_star"
                style="@style/GlimmerRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:isIndicator="true"
                android:max="5"
                android:numStars="5"
                android:rating="0.1" />

            <TextView
                android:id="@+id/item_car_list_scroe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/item_car_list_star"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/orange"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_car_list_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:textColor="@color/text_color" />

            <TextView
                android:id="@+id/item_car_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/item_car_list_distance"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:textColor="@color/grey"
                android:textSize="12sp" />
        </RelativeLayout>


        <TextView
            android:id="@+id/item_car_list_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:id="@+id/item_car_list_line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_background"
        android:layout_below="@id/item_car_list_ll"/>
<RelativeLayout
    android:id="@+id/item_car_list_service1"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@id/item_car_list_line1"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">
    <TextView
        android:id="@+id/item_car_list_service_price1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="21sp" />
    <TextView
        android:id="@+id/item_car_list_service_name1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/item_car_list_service_price1"
        android:maxLines="1"
        android:textColor="@color/text_color"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/item_car_list_service_sale1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_toRightOf="@id/item_car_list_service_price1"
        android:layout_below="@id/item_car_list_service_name1"
        android:textColor="@color/grey"
        android:textSize="12sp" />
</RelativeLayout>
    <View
        android:id="@+id/item_car_list_line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_background"
        android:layout_below="@id/item_car_list_service1"/>
    <RelativeLayout
        android:id="@+id/item_car_list_service2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/item_car_list_line2"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">
        <TextView
            android:id="@+id/item_car_list_service_price2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/orange"
            android:textSize="21sp" />
        <TextView
            android:id="@+id/item_car_list_service_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_car_list_service_price2"
            android:maxLines="1"
            android:textColor="@color/text_color"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/item_car_list_service_sale2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/item_car_list_service_price2"
            android:layout_below="@id/item_car_list_service_name2"
            android:textColor="@color/grey"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>
