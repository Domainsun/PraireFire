<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@mipmap/head_backgroud">

        <ImageView
            android:id="@+id/fragment_my_earphone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="15dp"
            android:src="@mipmap/earphone" />

        <ImageView
            android:id="@+id/fragment_my_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/fragment_my_earphone"
            android:src="@mipmap/set_up" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_my_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@mipmap/upload_image"
            android:layout_marginTop="48dp"
             />
        <!--fresco:placeholderImage="@mipmap/ic_launcher"-->
        <TextView
            android:id="@+id/fragment_my_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:layout_toRightOf="@id/fragment_my_img"
            android:text="点击登录"
            android:textColor="@color/white"
            android:textSize="21sp" />

        <TextView
            android:id="@+id/fragment_my_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fragment_my_phone"
            android:layout_toRightOf="@id/fragment_my_img"
            android:background="@mipmap/member"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:text="普通会员"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_my_wallet_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="63dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/wallet"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="钱包"/>
        <TextView
            android:id="@+id/fragment_my_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="0.00元"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_my_integral_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/score_shop"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="我的积分"/>
        <TextView
            android:id="@+id/fragment_my_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="0"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_my_invitation_integral_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/invitation"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="邀请得积分"/>
        <TextView
            android:id="@+id/fragment_my_invitation_integral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:drawablePadding="10dp"
            android:text="0"
            android:layout_centerVertical="true"
            android:textSize="16sp"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fragment_my_order_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/my_order"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="我的订单"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/fragment_my_order"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_msg_bg"
            android:src="@mipmap/right_arrow"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="1"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_my_shoppingcar_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/shop_car"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="购物车"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
          />
        <TextView
            android:id="@+id/fragment_my_shoppingcar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/shape_msg_bg"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/white"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:text="1"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_my_collect_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/collection"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="我的收藏"/>
        <TextView
            android:id="@+id/fragment_my_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_my_evaluate_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/evaluate"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="我的评价"/>
        <TextView
            android:id="@+id/fragment_my_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
             />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_my_merchant_services_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/business_services"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="商家服务"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
             />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/fragment_my_nearby_rl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="1dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/nearby"
            android:textColor="@color/text_color"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="19sp"
            android:text="附近"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:textColor="@color/grey"
            android:drawablePadding="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            />
    </RelativeLayout>
</LinearLayout>
</ScrollView>