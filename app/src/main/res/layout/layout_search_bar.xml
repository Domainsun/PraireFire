<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@mipmap/head_backgroud"
    android:baselineAligned="false"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/search_bar_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/icon_homepage_downarrow"
        android:text="章贡区"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <RelativeLayout
        android:id="@+id/search_bar_relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/search_bar_address"
        android:layout_toLeftOf="@+id/search_bar_search"
        android:background="@drawable/shape_plug_search_edittext"
        >

        <EditText
            android:id="@+id/plug_search_edittext"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@null"
            android:drawableLeft="@mipmap/search_icon"
            android:drawablePadding="5dp"
            android:editable="false"
            android:focusable="false"
            android:gravity="left|center_vertical"
            android:hint="找商家"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="5dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="14sp"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/search_bar_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:text="搜索"
        android:textColor="@color/white"
        android:textSize="21sp" />
</RelativeLayout>
