<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/type_menu_pop_ll1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/check_textview_style"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/type_menu_pop_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/all_service" />

            <TextView
                android:id="@+id/type_menu_pop_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:text="全部服务"
                android:textColor="@color/grey"
                android:gravity="left" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/type_menu_pop_ll2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/check_textview_style"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/type_menu_pop_icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/service_grey" />

            <TextView
            android:id="@+id/type_menu_pop_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:text="服务"
            android:layout_weight="1"
            android:textColor="@color/grey"
            android:gravity="left" />
            <TextView
                android:id="@+id/type_menu_pop_count2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/grey"
                  />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/tail"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/type_menu_pop_ll3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/check_textview_style"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/type_menu_pop_icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/commodity_grey" />

            <TextView
                android:id="@+id/type_menu_pop_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="17sp"
                android:text="商品"
                android:layout_weight="1"
                android:textColor="@color/grey"
                android:gravity="left" />
            <TextView
                android:id="@+id/type_menu_pop_count3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="16sp"
                android:textColor="@color/grey"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:src="@mipmap/tail"/>
        </LinearLayout>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/type_menu_pop_rv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/grey_background"
        android:layout_weight="1" />
</LinearLayout>