<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/short_menu_pop_ll1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/check_textview_style"
        android:orientation="horizontal"
        android:gravity="center_vertical"
         >

        <ImageView
            android:id="@+id/short_menu_pop_icon1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/intelligent_sorting" />

        <TextView
            android:id="@+id/short_menu_pop_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="17sp"
            android:text="智能排序"
            android:textColor="@drawable/textview_btn_color"
            android:gravity="left" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/short_menu_pop_ll2"
        android:layout_width="match_parent"
        android:background="@drawable/check_textview_style"
        android:layout_height="40dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/short_menu_pop_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/praise" />

        <TextView
            android:id="@+id/short_menu_pop_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@drawable/textview_btn_color"
            android:text="好评优先"
            android:textSize="17sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/short_menu_pop_ll3"
        android:layout_width="match_parent"
        android:background="@drawable/check_textview_style"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"

      >

        <ImageView
            android:id="@+id/short_menu_pop_icon3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/distance" />

        <TextView
            android:id="@+id/short_menu_pop_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:textColor="@drawable/textview_btn_color"
            android:text="离我最近"
            android:textSize="17sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/short_menu_pop_ll4"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/check_textview_style"
        android:orientation="horizontal"
        android:gravity="center_vertical"
         >

        <ImageView
            android:id="@+id/short_menu_pop_icon4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/bottom" />

        <TextView
            android:id="@+id/short_menu_pop_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="人均最低"
            android:textColor="@drawable/textview_btn_color"
            android:textSize="17sp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/short_menu_pop_ll5"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/check_textview_style"
        >

        <ImageView
            android:id="@+id/short_menu_pop_icon5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/high" />

        <TextView
            android:id="@+id/short_menu_pop_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="left"
            android:text="人均最高"
            android:textColor="@drawable/textview_btn_color"
            android:textSize="17sp"/>
    </LinearLayout>
</LinearLayout>