<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"

    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_background"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@mipmap/head_backgroud">

            <TextView
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y60"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:drawablePadding="@dimen/x20"
                android:drawableRight="@mipmap/back" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="商家入驻申请"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </RelativeLayout>




     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="100dp"
         android:background="@color/white">

         <com.facebook.drawee.view.SimpleDraweeView
             android:id="@+id/iv"
             android:layout_width="125dp"
             android:layout_height="77dp"
             android:layout_marginLeft="15dp"
             android:layout_marginTop="12dp"/>
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="19sp"
            android:text="洗车"
            android:layout_toRightOf="@id/iv"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"/>

         <TextView
             android:id="@+id/tv_decs"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:textColor="@color/grey"
             android:textSize="16sp"
             android:text="仅售25，节假日通用。"
             android:layout_toRightOf="@id/iv"
             android:layout_below="@id/tv_name"
             android:layout_marginLeft="12dp"
             android:layout_marginTop="4dp"
             android:layout_marginBottom="4dp"/>


         <TextView
             android:id="@+id/tv_price"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="¥ 25元"
             android:textColor="@color/orange"
             android:textSize="16sp"
             android:layout_toRightOf="@id/iv"
             android:layout_marginLeft="12dp"
             android:layout_alignParentBottom="true"
             android:layout_marginBottom="14dp"
             android:layout_marginTop="4dp"
             />

     </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="订单详情"
                android:layout_marginLeft="15dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white">

            <TextView
                android:id="@+id/tv_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="联系人"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_contact_person"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="张三"
                android:layout_marginLeft="104dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="联系电话"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_contact_phone"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="123456789"
                android:layout_marginLeft="104dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="订单信息"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_info"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="洗车"
                android:layout_marginLeft="104dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="订单编号"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_orderId"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="000000"
                android:layout_marginLeft="104dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="下单时间"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="2018-1-17    17:18:40"
                android:layout_marginLeft="104dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="数量"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/tv_count"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="1"
                android:layout_marginLeft="104dp"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/y2"
            android:background="@color/white">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="实付款"
                android:layout_marginLeft="15dp"
                android:textColor="@color/text_color"
                android:textSize="19sp" />
            <EditText
                android:id="@+id/et_price"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/orange"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="¥ 25"
                android:background="@null"
                android:layout_marginLeft="104dp"/>


            <TextView
                android:id="@+id/tv_discount"
                android:layout_toRightOf="@id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/grey"
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:text="(普通会员9.8折)"
                android:layout_marginLeft="150dp"
              />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y200"
            android:layout_marginTop="@dimen/y50"
            android:background="@color/white">


            <Button
                android:id="@+id/submit"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/x690"
                android:layout_height="50dp"
                android:background="@color/orange"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="19sp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="确认"/>

        </RelativeLayout>


    </LinearLayout>
</ScrollView>