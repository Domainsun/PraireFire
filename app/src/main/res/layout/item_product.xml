<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >


        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/product_photo"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/tv_procut_photo"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            fresco:placeholderImage="@mipmap/add_images" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="洗车"
            android:layout_toRightOf="@id/product_photo"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/product_text"/>





        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_name"
            android:layout_toRightOf="@id/product_photo"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12.5dp"
            android:text="¥ 25"
            android:textColor="@color/f9e19"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/saled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/product_photo"
            android:layout_below="@id/tv_price"
            android:text="已售200"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12.5dp"
            android:textColor="@color/grey"
            android:textSize="12sp" />

        


        <TextView
            android:id="@+id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_f5d"
            android:layout_alignParentRight="true"
            android:text="修改"
            android:textColor="@color/f5d"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>


        <TextView
            android:layout_marginBottom="12.5dp"
            android:id="@+id/tv_delete"
            android:layout_below="@id/tv_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_btn_f5d"
            android:layout_alignParentRight="true"
            android:text="下架"
            android:textColor="@color/f5d"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"/>

        <ImageView
            android:id="@+id/iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/service_off_shelves"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"/>
    </RelativeLayout>


</LinearLayout>
