<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:background="@mipmap/head_backgroud">

        <TextView
            android:id="@+id/shop_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textSize="21sp"
            android:text="店铺"
            android:padding="8dp"
            android:drawableLeft="@mipmap/back"/>

        <ImageView
            android:id="@+id/shop_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:src="@mipmap/more"/>
        <ImageView
            android:id="@+id/shop_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/shop_more"
            android:src="@mipmap/collection3"/>
        <ImageView
            android:id="@+id/shop_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@id/shop_collect"
            android:layout_centerVertical="true"
            android:src="@mipmap/share"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/shop_logo"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/welcome1"/>
    <TextView
        android:id="@+id/shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color"
        android:textSize="21sp"
        android:text="店铺"
        android:padding="8dp"
         />
</LinearLayout>